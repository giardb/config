### Output configuration
#
# Default wallpaper (more resolutions are available in /usr/share/backgrounds/sway/)
output * bg /home/giab/.config/wallpaper/tokien.jpg stretch

set $laptop eDP-1

bindswitch --reload --locked lid:on output $laptop disable
bindswitch --reload --locked lid:off output $laptop enable

output eDP-1 {
	mode 3840x2160
	scale 2
	pos 0 0
}

output 'Dell Inc. DELL S3422DWG 4ZB3T63' {   
 	mode 3440x1440@99.982Hz
 	scale 1.33    
 	pos 1920 0
 	adaptive_sync on
}

output 'ASUSTek COMPUTER INC VG278 K7LMQS065714' {
	enable
	power on
	mode 1920x1080
	pos 0 0
}
