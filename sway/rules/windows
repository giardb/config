# Rules for window's app

# Pavucontrol in floating
for_window [app_id="pavucontrol"] floating enable, sticky enable, resize set width 800 px height 600px, move position center

for_window [class="feh"] floating enable, sticky enable, resize set width 800 px height 800px, move position cursor, move down 35

# Visual Studio Code rules
for_window [class="code-oss"] title_format "%title", border none, layout tabbed
assign [class="code-oss"] $ws2

# Discord rules
assign [class="discord"] $ws6
for_window [class="discord"] border none

# Termite rules
for_window [app_id="termite"] border none

# Chrome rules
assign [class="Google-chrome"] $ws3
for_window [class="Google-chrome"] border none

# Misc rules
for_window [shell="xwayland"] title_format "%title [XWayland]"


